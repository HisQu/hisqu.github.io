---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/IndexLayout.astro';
import Image from 'astro/components/Image.astro';
import { Calendar, BookOpen, ArrowRight, Library } from 'lucide-astro';

const allPubs = (await getCollection('publications'))
    .sort((a, b) => b.data.date.getTime() - a.data.date.getTime());

const allVenues = ["Alle", ...new Set(allPubs.map(p => p.data.venue ?? "Sonstige"))];
const categories = allVenues.map((v, i) => ({
    name: v,
    count: v === "Alle" ? allPubs.length : allPubs.filter(p => (p.data.venue ?? "Sonstige") === v).length,
    active: i === 0,
}));

const formatDate = (date: Date) =>
    date.toLocaleDateString('de-DE', { day: 'numeric', month: 'long', year: 'numeric' });

const featuredPub = allPubs[0];
const otherPubs = allPubs.slice(1);
---

<Layout title="Publikationen | HisQu">
    <main class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-24">

        <!-- Header -->
        <div class="text-center mb-10">
            <div class="inline-flex items-center gap-2 bg-purple-500/10 border border-purple-500/20 rounded-full px-4 py-2 mb-6">
                <Library size={14} class="text-purple-400" />
                <span class="text-purple-300 text-sm font-medium">Wissenschaftliche Ver√∂ffentlichungen</span>
            </div>

            <h1 class="text-4xl sm:text-5xl md:text-6xl font-bold text-white mb-4">
                <span class="bg-gradient-to-r from-blue-400 to-purple-600 bg-clip-text text-transparent">Publi&shy;kationen</span>
            </h1>

            <!-- Filter buttons -->
            <div id="pub-filter" class="flex flex-wrap items-center justify-center gap-2">
                {categories.map((cat) => (
                    <button
                        data-filter={cat.name}
                        class:list={[
                            "px-3 py-1.5 rounded-full text-xs md:text-sm font-medium transition-all duration-300",
                            cat.active
                                ? 'bg-gradient-to-r from-blue-500 to-purple-600 text-white'
                                : 'bg-slate-800/50 text-slate-300 hover:bg-slate-700/50 hover:text-white border border-slate-700/50',
                        ]}
                    >
                        {cat.name} ({cat.count})
                    </button>
                ))}
            </div>
        </div>

        <!-- Publications grid -->
        <div id="pub-grid" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 md:gap-6">

            <!-- Featured (first) publication -->
            <article class="md:col-span-2 lg:col-span-2 grid-item group" data-category={featuredPub.data.venue ?? "Sonstige"}>
                <div class="landing-card overflow-hidden h-full flex flex-col rounded-2xl">
                    {featuredPub.data.image && (
                        <div class="relative h-48 md:h-56 overflow-hidden">
                            <Image
                                src={featuredPub.data.image.src}
                                alt={featuredPub.data.image.alt}
                                class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
                            />
                            <div class="absolute top-3 left-3">
                                <span class="px-3 py-1 bg-blue-500 text-white text-xs font-medium rounded-full">Neu</span>
                            </div>
                        </div>
                    )}
                    <div class="p-5 md:p-6 flex flex-col flex-grow">
                        <span class="text-blue-400 text-xs font-semibold uppercase tracking-wider mb-2">
                            {featuredPub.data.venue ?? "Sonstige"}
                        </span>
                        <div class="flex items-center gap-4 text-slate-400 text-xs mb-3">
                            <div class="flex items-center gap-1">
                                <Calendar size={12} />
                                <span>{formatDate(featuredPub.data.date)}</span>
                            </div>
                        </div>
                        <h2 class="text-lg md:text-xl font-bold text-white mb-2 group-hover:text-blue-400 transition-colors">
                            {featuredPub.data.title}
                        </h2>
                        {featuredPub.data.authors && (
                            <p class="text-slate-400 text-sm mb-3">{featuredPub.data.authors.join(', ')}</p>
                        )}
                        <p class="text-slate-300 text-sm leading-relaxed mb-4 flex-grow">{featuredPub.data.description}</p>
                        <a
                            href={`/publications/${featuredPub.id}`}
                            class="self-start flex items-center gap-2 text-blue-400 hover:text-blue-300 transition-colors text-sm font-medium group/link"
                        >
                            <span>Mehr erfahren</span>
                            <ArrowRight size={14} class="transition-transform duration-300 group-hover/link:translate-x-1" />
                        </a>
                    </div>
                </div>
            </article>

            <!-- Other publications -->
            {otherPubs.map((pub) => (
                <article class="lg:col-span-1 grid-item group" data-category={pub.data.venue ?? "Sonstige"}>
                    <div class="landing-card overflow-hidden h-full flex flex-col rounded-2xl">
                        {pub.data.image && (
                            <div class="relative h-36 md:h-40 overflow-hidden">
                                <Image
                                    src={pub.data.image.src}
                                    alt={pub.data.image.alt}
                                    class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
                                />
                            </div>
                        )}
                        <div class="p-4 md:p-5 flex flex-col flex-grow">
                            <span class="text-purple-400 text-xs font-semibold uppercase tracking-wider mb-1.5">
                                {pub.data.venue ?? "Sonstige"}
                            </span>
                            <div class="flex items-center gap-3 text-slate-400 text-xs mb-2">
                                <div class="flex items-center gap-1">
                                    <Calendar size={11} />
                                    <span>{formatDate(pub.data.date)}</span>
                                </div>
                            </div>
                            <h2 class="text-sm md:text-base font-bold text-white mb-2 group-hover:text-purple-400 transition-colors leading-snug">
                                {pub.data.title}
                            </h2>
                            {pub.data.authors && (
                                <p class="text-slate-400 text-xs mb-2">{pub.data.authors.join(', ')}</p>
                            )}
                            <p class="text-slate-300 text-xs leading-relaxed mb-3 flex-grow line-clamp-3">{pub.data.description}</p>
                            <a
                                href={`/publications/${pub.id}`}
                                class="self-start flex items-center gap-1.5 text-purple-400 hover:text-purple-300 transition-colors text-xs font-medium group/link"
                            >
                                <span>Lesen</span>
                                <ArrowRight size={12} class="transition-transform duration-300 group-hover/link:translate-x-1" />
                            </a>
                        </div>
                    </div>
                </article>
            ))}
        </div>
    </main>
</Layout>

<script>
    import gsap from 'gsap';

    document.addEventListener('DOMContentLoaded', () => {
        gsap.fromTo(
            '#pub-grid .grid-item',
            { opacity: 0, y: 16 },
            { opacity: 1, y: 0, duration: 0.6, stagger: 0.1, delay: 0.3 }
        );

        const filterButtons = document.querySelectorAll<HTMLButtonElement>('#pub-filter button');
        const pubArticles = document.querySelectorAll<HTMLElement>('#pub-grid .grid-item');

        const activeClasses = ['bg-gradient-to-r', 'from-blue-500', 'to-purple-600', 'text-white'];
        const inactiveClasses = [
            'bg-slate-800/50', 'text-slate-300', 'hover:bg-slate-700/50',
            'hover:text-white', 'border', 'border-slate-700/50',
        ];

        const applyFilter = (selectedFilter: string) => {
            filterButtons.forEach(btn => {
                btn.classList.remove(...activeClasses, ...inactiveClasses);
                if (btn.dataset.filter === selectedFilter) {
                    btn.classList.add(...activeClasses);
                } else {
                    btn.classList.add(...inactiveClasses);
                }
            });

            const visible: HTMLElement[] = [];
            pubArticles.forEach(article => {
                const isVisible = selectedFilter === 'Alle' || selectedFilter === article.dataset.category;
                article.style.display = isVisible ? '' : 'none';
                if (isVisible) visible.push(article);
            });
            gsap.fromTo(visible, { opacity: 0, y: 8 }, { opacity: 1, y: 0, duration: 0.4, stagger: 0.05 });
        };

        filterButtons.forEach(btn => {
            btn.addEventListener('click', () => {
                if (btn.dataset.filter) applyFilter(btn.dataset.filter);
            });
        });

        applyFilter('Alle');
    });
</script>
