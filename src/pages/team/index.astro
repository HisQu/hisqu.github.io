---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/IndexLayout.astro';
import { partners } from '../../consts';
import { Image } from 'astro:assets';
import { Users, ArrowRight, Mail, Globe } from 'lucide-astro';

const team = await getCollection('team');

const partnersMap = Object.fromEntries(partners.map(p => [p.key, p]));

const compareMembers = (a: any, b: any) => {
    const an = Number(a?.data?.numerical_position ?? Number.POSITIVE_INFINITY);
    const bn = Number(b?.data?.numerical_position ?? Number.POSITIVE_INFINITY);
    if (an !== bn) return an - bn;
    return String(a?.data?.last_name ?? a?.data?.name ?? '')
        .localeCompare(String(b?.data?.last_name ?? b?.data?.name ?? ''), 'de');
};

// All unique groups ordered by partner numerical_position
const groupKeys = [...new Set(team.map(m => m.data.group))]
    .sort((ga, gb) => {
        const pa = partnersMap[ga];
        const pb = partnersMap[gb];
        const na = pa?.numerical_position ?? Infinity;
        const nb = pb?.numerical_position ?? Infinity;
        if (na !== nb) return na - nb;
        return String(ga).localeCompare(String(gb), 'de');
    });

const categories = [
    { name: 'Alle', count: team.length, key: 'alle' },
    ...groupKeys.map(k => ({
        name: partnersMap[k]?.unit ?? k,
        count: team.filter(m => m.data.group === k).length,
        key: k,
    })),
];

const sortedTeam = team.slice().sort(compareMembers);

const buildName = (member: any) => {
    const base = member.name ?? '';
    const prefix = member.academic_title?.prefix?.trim() ?? '';
    const suffix = member.academic_title?.suffix?.trim() ?? '';
    return [prefix, base].filter(Boolean).join(' ') + (suffix ? `, ${suffix}` : '');
};

const buildInitials = (member: any) =>
    (member.name ?? '?')
        .split(',')[0]
        .split(' ')
        .map((p: string) => p[0])
        .join('')
        .toUpperCase();
---

<Layout title="Team | HisQu" description="Das interdisziplinäre Team des HisQu-Projekts.">
    <main class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-24">

        <!-- Header -->
        <div class="text-center mb-10">
            <div class="inline-flex items-center gap-2 bg-purple-500/10 border border-purple-500/20 rounded-full px-4 py-2 mb-6">
                <Users size={14} class="text-purple-400" />
                <span class="text-purple-300 text-sm font-medium">Interdisziplinäres Forschungsteam</span>
            </div>

            <h1 class="text-4xl sm:text-5xl md:text-6xl font-bold text-white mb-4">
                Unsere <span class="bg-gradient-to-r from-blue-400 to-purple-600 bg-clip-text text-transparent">Arbeits&shy;gruppe</span>
            </h1>

            <p class="text-slate-300 text-base md:text-lg max-w-2xl mx-auto mb-8 leading-relaxed">
                Wir sind ein interdisziplinäres Team aus Historikern und Informatikern, das sich der Digitalisierung und semantischen Erschließung
                semistrukturierter Quellen widmet.
            </p>

            <!-- Filter buttons -->
            <div id="team-filter" class="flex flex-wrap items-center justify-center gap-2">
                {categories.map((cat, i) => (
                    <button
                        data-filter={cat.key}
                        class:list={[
                            "px-3 py-1.5 rounded-full text-xs md:text-sm font-medium transition-all duration-300",
                            i === 0
                                ? 'bg-gradient-to-r from-blue-500 to-purple-600 text-white'
                                : 'bg-slate-800/50 text-slate-300 hover:bg-slate-700/50 hover:text-white border border-slate-700/50',
                        ]}
                    >
                        {cat.name} ({cat.count})
                    </button>
                ))}
            </div>
        </div>

        <!-- Group sections -->
        {groupKeys.map(groupKey => {
            const partner = partnersMap[groupKey];
            const members = sortedTeam.filter(m => m.data.group === groupKey);
            return (
                <section class="team-group mb-20" data-group={groupKey}>

                    <!-- Group heading with logo -->
                    <div class="flex flex-row items-center gap-4 mb-8 pb-4 border-b border-purple-500/20">
                        {partner && (() => {
                            const img = partner.srcLight || partner.srcDark;
                            if (img && typeof img === 'object' && 'src' in img) {
                                return (
                                    <span class="hidden sm:flex shrink-0">
                                        <Image src={img} alt={partner.alt || partner.name} width={partner.width || 158} height={partner.height || 48} class="h-10 w-auto max-h-10 object-contain" loading="lazy" />
                                    </span>
                                );
                            }
                            if (typeof img === 'string') {
                                return (
                                    <span class="hidden sm:flex shrink-0">
                                        <img src={img} alt={partner.alt || partner.name} class="h-10 w-auto max-h-10 object-contain bg-white p-1 rounded-xl" loading="lazy" />
                                    </span>
                                );
                            }
                        })()}
                        <div>
                            <h2 class="text-xl sm:text-2xl font-bold text-white leading-tight m-0">
                                {partner?.unit ?? groupKey}
                            </h2>
                            {partner?.name && (
                                <p class="text-sm text-slate-400 m-0">{partner.name}</p>
                            )}
                        </div>
                    </div>

                    <!-- Member cards grid -->
                    <ul role="list" class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 gap-4 md:gap-6 items-start">
                        {members.map(member => {
                            const name = buildName(member.data);
                            const initials = buildInitials(member.data);
                            const rawImage = member.data.image;
                            return (
                                <li class="team-member grid-item group">
                                    <a href={`/team/${member.id}`} class="block">
                                        <div class="team-card overflow-hidden flex flex-col rounded-2xl transition-all duration-300 group-hover:-translate-y-1">

                                            <!-- Photo -->
                                            <div class="relative overflow-hidden aspect-square shrink-0">
                                                {rawImage && typeof rawImage === 'object' && 'src' in rawImage
                                                    ? (
                                                        <Image
                                                            src={rawImage}
                                                            alt={name}
                                                            class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
                                                            loading="lazy"
                                                        />
                                                    ) : (
                                                        <div class="w-full h-full flex items-center justify-center bg-slate-800 text-slate-400 text-2xl font-bold">
                                                            {initials}
                                                        </div>
                                                    )
                                                }
                                                <!-- Group colour accent -->
                                                <div class="absolute inset-0 bg-gradient-to-t from-slate-900/60 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300" />
                                            </div>

                                            <!-- Info -->
                                            <div class="p-3 md:p-4 flex flex-col flex-grow">
                                                <h3 class="text-sm md:text-base font-bold text-white leading-snug mb-1 group-hover:text-purple-400 transition-colors">
                                                    {name}
                                                </h3>
                                                {member.data.position && (
                                                    <p class="text-slate-400 text-xs leading-snug mb-2 flex-grow">{member.data.position}</p>
                                                )}
                                                <div class="flex items-center gap-2 mt-auto">
                                                    {member.data.email && (
                                                        <a
                                                            href={`mailto:${member.data.email}`}
                                                            class="text-slate-500 hover:text-purple-400 transition-colors"
                                                            onclick="event.stopPropagation()"
                                                            title="E-Mail"
                                                        >
                                                            <Mail size={13} />
                                                        </a>
                                                    )}
                                                    {member.data.website && (
                                                        <a
                                                            href={member.data.website}
                                                            class="text-slate-500 hover:text-purple-400 transition-colors"
                                                            target="_blank"
                                                            rel="noopener"
                                                            onclick="event.stopPropagation()"
                                                            title="Website"
                                                        >
                                                            <Globe size={13} />
                                                        </a>
                                                    )}
                                                    <span class="ml-auto flex items-center gap-1 text-purple-400 opacity-0 group-hover:opacity-100 transition-opacity text-xs font-medium">
                                                        Profil <ArrowRight size={11} />
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                    </a>
                                </li>
                            );
                        })}
                    </ul>
                </section>
            );
        })}
    </main>
</Layout>

<script>
    import gsap from 'gsap';

    document.addEventListener('astro:page-load', () => {
        // Entrance animation
        gsap.fromTo(
            '.team-member',
            { opacity: 0, y: 16 },
            { opacity: 1, y: 0, duration: 0.5, stagger: 0.06, delay: 0.2 }
        );

        const filterButtons = document.querySelectorAll<HTMLButtonElement>('#team-filter button');
        const groups = document.querySelectorAll<HTMLElement>('.team-group');
        const members = document.querySelectorAll<HTMLElement>('.team-member');

        const activeClasses = ['bg-gradient-to-r', 'from-blue-500', 'to-purple-600', 'text-white'];
        const inactiveClasses = [
            'bg-slate-800/50', 'text-slate-300', 'hover:bg-slate-700/50',
            'hover:text-white', 'border', 'border-slate-700/50',
        ];

        const applyFilter = (key: string) => {
            // Update button styles
            filterButtons.forEach(btn => {
                btn.classList.remove(...activeClasses, ...inactiveClasses);
                btn.classList.add(...(btn.dataset.filter === key ? activeClasses : inactiveClasses));
            });

            if (key === 'alle') {
                groups.forEach(g => (g.style.display = ''));
                const visibleMembers = [...members];
                gsap.fromTo(visibleMembers, { opacity: 0, y: 8 }, { opacity: 1, y: 0, duration: 0.4, stagger: 0.04 });
            } else {
                groups.forEach(g => {
                    g.style.display = g.dataset.group === key ? '' : 'none';
                });
                const visibleMembers = [...members].filter(m => {
                    const section = m.closest<HTMLElement>('.team-group');
                    return section?.dataset.group === key;
                });
                gsap.fromTo(visibleMembers, { opacity: 0, y: 8 }, { opacity: 1, y: 0, duration: 0.4, stagger: 0.04 });
            }
        };

        filterButtons.forEach(btn => {
            btn.addEventListener('click', () => {
                if (btn.dataset.filter) applyFilter(btn.dataset.filter);
            });
        });
    });
</script>
