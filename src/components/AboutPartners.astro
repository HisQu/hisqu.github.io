---
/* PartnersGrid.astro — Astro + Tailwind (dark mode ready).
   Vorlage: Team-Grid → Inhalte aus AboutPartners.astro */
import Image from "astro/components/Image.astro";
import { partners } from "../consts";

const isLocal = (src: string) => !/^https?:\/\//.test(src);
---

<div class="bg-white py-24 sm:py-32 dark:bg-gray-900">
    <div class="mx-auto max-w-7xl px-6 lg:px-8">
        <!-- Header -->
        <div class="mx-auto max-w-2xl lg:mx-0">
            <p class="text-base/7 font-semibold text-purple-600 dark:text-purple-400">Partner im Verbund</p>
            <h2 class="text-4xl font-semibold tracking-tight text-pretty text-gray-900 sm:text-5xl dark:text-white">Meet the Partners</h2>
            <p class="mt-6 text-lg/8 text-gray-600 dark:text-gray-400">
                HisQu wird von führenden Einrichtungen der Digital Humanities und Geschichtswissenschaft getragen.
                Der Verbund verbindet methodische Exzellenz in <strong>Computerlinguistik</strong> und <strong>Wissensgraphen</strong>
                mit langjähriger <strong>Editionserfahrung</strong> und <strong>Forschungsdaten-Kompetenz</strong>.
            </p>
        </div>

        <!-- Grid -->
        <ul role="list" class="mx-auto mt-20 grid max-w-2xl grid-cols-1 gap-x-8 gap-y-16 sm:grid-cols-2 lg:mx-0 lg:max-w-none lg:grid-cols-3">
            {partners.map((p) => (
                    <li>
                        <!-- Logo / Visual -->
                        <a href={p.href} target="_blank" rel="noreferrer" class="block group" aria-label={`${p.name} – Website`}>
                            {
                                !isLocal(p.srcLight) ? (
                                        <picture>
                                            {p.srcDark && <source srcset={p.srcDark} media="(prefers-color-scheme: dark)" />}
                                            <img
                                                    src={p.srcLight}
                                                    alt={p.name}
                                                    loading="lazy"
                                                    decoding="async"
                                                    class="aspect-[3/2] w-full rounded-2xl object-contain bg-gray-50 p-6 outline-1 -outline-offset-1 outline-black/5 ring-1 ring-inset ring-black/5 transition group-hover:shadow-sm dark:bg-gray-800 dark:outline-white/10 dark:ring-white/10"
                                            />
                                        </picture>
                                ) : (
                                        <Image
                                                src={p.srcLight}
                                                alt={p.name}
                                                width={512}
                                                height={342}
                                                loading="lazy"
                                                decoding="async"
                                                class="aspect-[3/2] w-full rounded-2xl object-contain bg-gray-50 p-6 outline-1 -outline-offset-1 outline-black/5 ring-1 ring-inset ring-black/5 transition group-hover:shadow-sm dark:bg-gray-800 dark:outline-white/10 dark:ring-white/10"
                                        />
                                )
                            }
                        </a>

                        <!-- Text -->
                        <h3 class="mt-6 text-lg/8 font-semibold tracking-tight text-gray-900 dark:text-white">
                            <a href={p.href} target="_blank" rel="noreferrer" class="hover:underline">
                                {p.name}{p.unit && ` · ${p.unit}`}
                            </a>
                        </h3>

                        {p.institution && (
                                <p class="text-sm text-gray-500 dark:text-gray-400">{p.institution}</p>
                        )}

                        {(p.leads && p.leads.length > 0) && (
                                <p class="mt-1 text-sm text-gray-600 dark:text-gray-400">
                                    {p.leads.map(l => (l.title ? `${l.title} ${l.name}` : l.name)).join(" · ")}
                                </p>
                        )}

                        {p.summary && (
                                <p class="mt-3 text-base/7 text-gray-600 dark:text-gray-400">{p.summary}</p>
                        )}

                        <!-- Actions -->
                        <ul role="list" class="mt-6 flex gap-x-6">
                            {p.href && (
                                    <li>
                                        <a href={p.href} target="_blank" rel="noreferrer" class="text-gray-400 hover:text-gray-600 dark:text-gray-400 dark:hover:text-gray-200" aria-label={`${p.name} – Website öffnen`}>
                                            <svg viewBox="0 0 20 20" fill="currentColor" aria-hidden="true" class="size-5">
                                                <path fill-rule="evenodd" clip-rule="evenodd" d="M11 2a1 1 0 100 2h3.586L7.293 11.293a1 1 0 101.414 1.414L16 5.414V9a1 1 0 102 0V3a1 1 0 00-1-1h-6z"></path>
                                                <path d="M3 5a2 2 0 012-2h4a1 1 0 110 2H5v10h10v-4a1 1 0 112 0v4a2 2 0 01-2 2H5a2 2 0 01-2-2V5z"></path>
                                            </svg>
                                        </a>
                                    </li>
                            )}
                        </ul>
                    </li>
                ))}
                </ul>

                <!-- Footer CTA -->
                <div class="mx-auto mt-20 max-w-2xl text-center lg:mx-0 lg:max-w-none">
                    <h3 class="text-2xl font-bold tracking-tight text-gray-900 dark:text-white">Kontakt &amp; Mitmachen</h3>
                    <p class="mt-4 text-gray-600 dark:text-gray-400">
                        Fragen, Kooperationen oder Fallstudien? Besuche unsere
                        <a class="font-medium text-purple-600 underline decoration-purple-200 underline-offset-2 hover:text-purple-700 dark:text-purple-400 dark:decoration-purple-900" href="/contact">Kontaktseite</a>
                        oder eröffne ein
                        <a class="font-medium text-purple-600 underline decoration-purple-200 underline-offset-2 hover:text-purple-700 dark:text-purple-400 dark:decoration-purple-900" href="https://github.com/HisQu/Organisation/issues" target="_blank" rel="noreferrer">Issue</a>.
                    </p>
                </div>
                </div>
                </div>
