---
// src/components/Steps/StepSection.astro
import type { Step } from "../types";
import { Icon } from "astro-icon/components";

export interface Props {
  step: Step;
  /** optional: 1-basierter Index (1,2,3,...) – fällt auf numerische step.id zurück */
  index?: number;
}

const { step, index } = Astro.props;

// Parität robust bestimmen:
// 1) Wenn index übergeben, nutze den (1-basiert).
// 2) Sonst: wenn step.id numerisch ist, nutze sie.
// 3) Fallback: 1 (ungerade), damit Default gleich bleibt (Bild rechts).
const numericId = Number(step.id);
const basis = typeof index === "number" ? index : (Number.isFinite(numericId) ? numericId : 1);
const isEven = basis % 2 === 0;
---

<section class="fullscreen-section" id={`step-${step.id}`}>
  <div class="content-container section-inner flex flex-col items-center justify-center py-20 md:py-0 w-full">

    <!-- Section badge -->
    <div class={`inline-flex items-center gap-2 bg-gradient-to-r ${step.color} bg-opacity-20 border border-white/20 rounded-full px-4 py-2 mb-4 md:mb-6 self-center`}>
      <Icon name={step.icon} size={14} class="text-white" />
      <span class="text-white text-xs md:text-sm font-medium">{step.subtitle}</span>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 md:gap-10 lg:gap-14 w-full items-center">

      <!-- Text content -->
      <div class={`flex flex-col gap-4 md:gap-6 ${isEven ? "lg:order-2" : "lg:order-1"}`}>
        <h2 class="section-title text-3xl sm:text-4xl md:text-5xl text-white">
          {step.title}
        </h2>
        <p class="text-sm md:text-base lg:text-lg text-slate-300 leading-relaxed">
          {step.description}
        </p>

        <!-- Key features (desktop) -->
        <div class="hidden md:flex flex-col gap-2">
          <h3 class="text-sm font-semibold text-white mb-1">Kernfunktionen</h3>
          {step.details.map((detail) => (
            <div class="flex items-center gap-3">
              <div class={`w-1.5 h-1.5 rounded-full flex-shrink-0 bg-gradient-to-r ${step.color}`} />
              <span class="text-slate-200 text-sm">{detail}</span>
            </div>
          ))}
        </div>

        <!-- Tools -->
        {step.tools.length > 0 && (
          <div class="flex flex-col gap-2">
            <h3 class="text-sm font-semibold text-white mb-1">Verwendete Tools</h3>
            <div class="flex flex-wrap gap-2">
              {step.tools.map((tool) => (
                <a href={tool.href} class={`px-3 py-1 bg-gradient-to-r ${step.color} opacity-90 border border-white/30 rounded-full text-xs font-semibold text-white shadow-sm`}>
                  {tool.name}
                </a>
              ))}
            </div>
          </div>
        )}
      </div>

      <!-- Visual card -->
      <div class={`${isEven ? "lg:order-1" : "lg:order-2"}`}>
        <div class="relative">
          <div class={`absolute inset-0 bg-gradient-to-r ${step.color} opacity-20 blur-3xl rounded-3xl`} />
          <div class="relative landing-card rounded-3xl p-8 flex items-center justify-center" style="min-height: 280px;">
            <div class="text-center">
              <div class={`w-24 h-24 md:w-28 md:h-28 mx-auto mb-5 rounded-full bg-gradient-to-r ${step.color} flex items-center justify-center`}>
                <Icon name={step.icon} size={40} class="text-white" />
              </div>
              <h3 class="text-xl md:text-2xl font-bold text-white mb-1">{step.title}</h3>
              <p class="text-slate-400 text-sm">{step.subtitle}</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

